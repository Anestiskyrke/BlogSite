        <style>
        img {
            max-width:100%;
            height: auto;

        }
        .bi {  
            text-align: center;  
            margin: 5px 2px;  
            font-size: 25px;  
            width: 25px;  
        }  
        .bi:hover {
            opacity: 0.6;
        }
        </style>
    </head>
    <body>
        <nav class="navbar sticky-top navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid" id="navbarNav">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">
                        <img src='https://lh3.googleusercontent.com/-E1-q4tYXsuU/AAAAAAAAAAI/AAAAAAAAAAA/Yf-x6256Pz0/s88-p-k-no-ns-nd/photo.jpg' style="width:35px; height:35px;" >Code Seed</img>
                    </a>
                </div>
                <ul class="navbar-nav" style="text-align:center">
                    <li class="px-4">
                    <li class="nav-item active">
                        <a class="nav-link" href={{path('homepage')}}>Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href={{path('admin_create_entry')}}>New Post</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href={{path('homepage')}}>Blog Posts</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href={{path('about_us')}}>About Us</a>
                    </li>
                </ul>
                <ul class="navbar-nav navbar-right navbar-fixed">  
                    <li class="nav-item">
                        {% if app.user %}
                            <a class="nav-link" href={{path('app_logout')}}>Logout</a>
                        {% endif %}
                        {% if (not app.user) and ( app.request.get("_route") not in ['app_login']) %}
                            <a class="dropdown">
                                <button class="btn btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Login
                                </button>
                                <form class="dropdown-menu p-1 dropdown-menu-end" aria-labelledby="dropdownMenuButton1" action="{{ path('app_login') }}" method="post">
                                    <div class= 'mb-3'>
                                        <label for="username">Username:</label>
                                        <input type="text" id="username" name="_username"/>
                                    </div>
                                    <div class = 'md-3'>
                                        <label for="password">Password:</label>
                                        <input type="password" id="password" name="_password"/>
                                    </div>
                                    {# If you want to control the URL the user is redirected to on success
                                    <input type="hidden" name="_target_path" value="/account"/> #}
                                    <input type="hidden" name="_target_path" value="{{path('admin_entries')}}"/>
                                    <button type="submit" class="btn btn-light">Login</button>    
                                    {#{% if not app.user %}   
                                        <a href={{path("app_register")}} class = "btn btn-light">Register</a>
                                    {% endif %}
                                    <a href={{path("admin_entries")}} class = "btn btn-light">Blog Posts</a>#}
                                </form>
                            </a>
                        {% endif %}
                    </li>
                    <li class='nav-item'>
                        <a class='btn btn-primary' href={{path("app_register")}}>Sign up for free</a>
                    </li>
                </ul>
            </div>
        </nav>
        <img src='https://jerryjenkins.com/wp-content/uploads/2019/08/Finding-the-Best-Creative-Writing-Blogs-on-the-Internet-scaled.jpg'></img>
        {% block body %}{% endblock %}
