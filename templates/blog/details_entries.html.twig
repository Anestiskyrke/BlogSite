{% extends 'base.html.twig' %}
{% block title %}{% endblock %}
{% block body %}
    <div class="container">
        <a href="{{ path('admin_entries') }}" class="btn btn-dark">Return</a>
        <a href="{{ path('admin_create_entry') }}" class="btn btn-secondary">Add Entry</a>
        {% for blogPost in blogPosts %}
            <div class="card">
                <div class="card-header">
                    <h5 class = "card-title">Title</h4>
                    <p class = "card-text">{{blogPost.title}}</p>
                </div>
                <div class="card-header">
                    <h5 class = "card-title">Description</h4>
                    <p class = "card-text">{{blogPost.description}}</p>
                </div>
                <div class="card-body">
                    <h5 class = "card-title">Slug</h4>
                    <p class = "card-text">{{blogPost.slug}}</p>
                </div>
                <div class="card-body">
                    <h4 class = "card-title">Body </h4>
                    <p class = "card-text">{{blogPost.body}}</p>
                </div>
                <div class="card-body">
                    <h5 class = "card-title">Author</h4>
                    <p class = "card-text">{{blogPost.author.username}}</p>
                </div> 
                <div class="card-footer">
                    <h5 class = "card-title">Created At</h4>
                    <p class = "card-text">{{blogPost.createdAt|date('F j, Y') }}</p>
                </div> 
                <div class="card-footer">
                    <h5 class = "card-title">Updated At</h4>
                    <p class = "card-text">{{blogPost.updatedAt|date('F j, Y') }}</p>
                </div> 
                
            </div>
        {% endfor %}
    </div>
{% endblock %}